<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:background="@color/color_voilet"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Location"
                android:textSize="40dp"
                android:fontFamily="@font/lobster"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/color_pink" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:src="@drawable/ic_location"/>
            <EditText
                android:id="@+id/latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the Latitude"
                android:padding="12dp"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/color_pink"
                android:textColor="@color/color_blue"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:fontFamily="@font/lobster"/>
            <EditText
                android:id="@+id/longtitude"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:hint="Enter the Longitiude"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/color_pink"
                android:padding="12dp"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_blue"
                android:fontFamily="@font/lobster"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:padding="12dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/color_pink"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_blue"
                android:fontFamily="@font/lobster"
                android:entries="@array/category" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timing"
                android:entries="@array/timing"
                android:layout_margin="15dp"
                android:padding="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/color_pink"
                android:hint="Enter Course @Eschool"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_blue"
                android:fontFamily="@font/lobster"/>
            <Button
                android:text="Submit"
                android:id="@+id/btnsubmit"
                android:background="@drawable/shape_login_button"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="15dp"
                android:fontFamily="@font/lobster"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>